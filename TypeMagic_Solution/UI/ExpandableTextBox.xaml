<UserControl x:Class="TypeMagic.UI.ExpandableTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основной TextBox -->
        <TextBox x:Name="txtMain" 
                 Grid.Column="0" Grid.Row="0"
                 Height="25" 
                 Margin="5"
                 VerticalAlignment="Center"
                 TextChanged="TxtMain_TextChanged"/>

        <!-- Кнопка переключения -->
        <Button x:Name="btnToggle" 
                Grid.Column="1" Grid.Row="0"
                Content="✎" 
                Width="30" 
                Height="25"
                Margin="0,5,5,5"
                FontSize="14"
                Click="BtnToggle_Click"/>

        <!-- Многострочный TextBox (изначально скрыт) -->
        <TextBox x:Name="txtExpanded" 
                 Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                 Height="100"
                 Margin="5"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Visibility="Collapsed"
                 TextChanged="TxtExpanded_TextChanged"/>
    </Grid>
</UserControl>
